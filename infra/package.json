{
  "name": "multitask-platform-infra",
  "version": "1.0.0",
  "description": "Infrastructure as Code for Multitask Platform",
  "main": "serverless.yml",
  "scripts": {
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:staging": "serverless deploy --stage staging",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "info": "serverless info",
    "logs": "serverless logs",
    "offline": "serverless offline",
    "lint": "eslint . --ext .js,.ts",
    "validate": "serverless print",
    "domain:create": "serverless create_domain",
    "domain:delete": "serverless delete_domain",
    "setup:secrets": "node scripts/setup-secrets.js",
    "build:services": "cd .. && make build-all"
  },
  "dependencies": {
    "aws-sdk": "^2.1531.0"
  },
  "devDependencies": {
    "serverless": "^3.38.0",
    "serverless-webpack": "^5.13.0",
    "serverless-offline": "^13.3.0",
    "serverless-domain-manager": "^7.3.6",
    "serverless-prune-plugin": "^2.0.2",
    "serverless-plugin-warmup": "^8.2.1",
    "webpack": "^5.89.0",
    "webpack-node-externals": "^3.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "serverless",
    "aws",
    "infrastructure",
    "microservices",
    "go",
    "react"
  ],
  "author": "Multitask Platform Team",
  "license": "MIT"
}